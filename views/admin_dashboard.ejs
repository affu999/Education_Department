<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous" />
    <title>
        <%= title %>
    </title>
    <meta name="author" content="Affan Sharief" />
    <meta name="description" content="BEO-Khanapur is a software handled by BEO" />
</head>

<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a href="#" class="navbar-brand ms-2">Education Department</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarElements"
            aria-controls="#navbarElements" aria-expanded="false" aria-label="Toggle Navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse ms-2" id="navbarElements">
            <ul class="navbar-nav ms-auto me-2">
                <li class="nav-item">
                    <a href="/" class="nav-link">Home</a>
                </li>

                <li class="nav-item">
                    <a href="/profile/admin/<%= kgid %>" class="nav-link">Profile</a>
                </li>

                <li class="nav-item">
                    <a href="/update-view-add/<%= kgid %>" class="nav-link">Update/View/Add Teacher</a>
                </li>

                <li class="nav-item dropdown">
                    <p class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        Update Pay Slip
                    </p>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li>
                            <a class="dropdown-item" href="/update-pay-slip/admin/previous_year_2/<%= kgid %>">
                                <%= current_years.prev_year_2 %> - <%= parseInt(current_years.prev_year_2) + 1 %>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider" />
                        </li>
                        <li>
                            <a class="dropdown-item" href="/update-pay-slip/admin/previous_year/<%= kgid %>">
                                <%= current_years.prev_year %> - <%= parseInt(current_years.prev_year) + 1 %>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider" />
                        </li>
                        <li>
                            <a class="dropdown-item" href="/update-pay-slip/admin/current_year/<%= kgid %>">
                                <%= current_years.curr_year %> - <%= parseInt(current_years.curr_year) + 1 %>
                            </a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        Update Tax Slip
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="/get-update-tax-slip/admin/previous_year_2/<%= kgid %>">
                            <%= current_years.prev_year_2 %> - <%= parseInt(current_years.prev_year_2) + 1 %>
                        </a></li>
                        <li>
                            <hr class="dropdown-divider" />
                        </li>
                        <li><a class="dropdown-item" href="/get-update-tax-slip/admin/previous_year/<%= kgid %>">
                            <%= current_years.prev_year %> - <%= parseInt(current_years.prev_year) + 1 %>
                        </a></li>
                        <li>
                            <hr class="dropdown-divider" />
                        </li>
                        <li><a class="dropdown-item" href="/get-update-tax-slip/admin/current_year/<%= kgid %>">
                            <%= current_years.curr_year %> - <%= parseInt(current_years.curr_year) + 1 %>
                        </a></li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a href="/get-upload-pdf/admin/<%= kgid %>" class="nav-link">Update/Upload Pdf</a>
                </li>

                <li class="nav-item">
                    <a href="/logout" class="nav-link">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Navbar End -->

    <!-- Admin Info Start -->
    <section class="container mt-5 mb-5">
        <p class="display-6 text-danger text-center border-bottom border-danger mx-auto" style="width:fit-content">Admin
            Dashboard</p>
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <tbody>
                    <tr>
                        <th>KGID</th>
                        <th>Name</th>
                        <th>School Name</th>
                        <th>Gender</th>
                        <th>Designation</th>
                    </tr>

                    <tr>
                        <% adminInfo.map((data, index)=> {
                            %>
                            <td class="text-capitalize">
                                <%= data.kgid %>
                            </td>
                            <td class="text-capitalize">
                                <%= data.name %>
                            </td>
                            <td class="text-capitalize">
                                <%= data.school_name %>
                            </td>
                            <td class="text-capitalize">
                                <%= data.gender %>
                            </td>
                            <td class="text-capitalize">
                                <%= data.designation %>
                            </td>
                            <% }); %>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
    <!-- Admin Info End -->

    <!-- Banner Start -->
        <section class="container rounded-3 admin-banner mb-5 border border-danger border-5">
        </section>
    <!-- Banner End -->

    <!-- Footer Start -->

    <footer class="bg-dark p-2 mb-auto">
        <h5 class="text-center text-white">Copyright Tech Fierce</h5>
        <h6 class="text-center text-white">
            Designed and Developed by Affan Sharief
        </h6>
    </footer>

    <!-- Footer End -->

    <!-- Scripts Start -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
    <!-- Scripts End -->
</body>

</html>